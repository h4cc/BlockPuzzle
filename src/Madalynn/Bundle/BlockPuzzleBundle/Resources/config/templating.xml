<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="block_puzzle.twig.extension.class">Madalynn\Bundle\BlockPuzzleBundle\Twig\Extension\BlockPuzzleExtension</parameter>
    </parameters>

    <services>
        <service id="block_puzzle.twig.extension" class="%block_puzzle.twig.extension.class%">
            <tag name="twig.extension" />
        </service>
    </services>
</container>